# =====================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =====================================================================
# ⚠️ هذا ملف للإنتاج - لا ترفعه على GitHub!
# انسخ هذا الملف إلى .env عند النشر

# Django Settings
DEBUG=False
DJANGO_SECRET_KEY=your-super-secret-production-key-here-change-this

# Database (SQL Server for production)
DB_ENGINE=sql_server.pyodbc
DB_NAME=BusTrackingDB
DB_HOST=your-server.database.windows.net
DB_PORT=1433
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redis Configuration (for WebSocket)
REDIS_HOST=localhost
REDIS_PORT=6379

# Email Settings (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
