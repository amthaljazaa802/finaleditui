# =====================================================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# =====================================================================
# استخدم هذا الملف للتطوير المحلي

# Django Settings
DEBUG=True
DJANGO_SECRET_KEY=django-insecure-dev-key-for-local-development-only

# Database (SQLite for development)
# لا حاجة لإعدادات قاعدة البيانات - سيتم استخدام SQLite تلقائياً

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,10.0.2.2,192.168.1.100,172.20.10.7,192.168.137.1

# CORS Origins (Allow all in development)
# CORS_ALLOW_ALL_ORIGINS will be True automatically when DEBUG=True

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://10.0.2.2:8000

# Redis Configuration (optional for development)
# يمكن استخدام InMemoryChannelLayer للتطوير
REDIS_HOST=localhost
REDIS_PORT=6379
